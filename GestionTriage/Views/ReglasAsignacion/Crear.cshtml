@using Microsoft.AspNetCore.Mvc.TagHelpers
@model GestionTriage.ViewModels.ReglaAsignacionViewModel
@{
    ViewData["Title"] = "Nueva Regla de Asignación";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Nueva Regla de Asignación</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Crear" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label">Nombre de la Regla</label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NivelTriageId" class="form-label">Nivel de Triage</label>
                            <select asp-for="NivelTriageId" class="form-select" 
                                    asp-items="@ViewBag.NivelesTriage">
                                <option value="">Seleccione un nivel...</option>
                            </select>
                            <span asp-validation-for="NivelTriageId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label">Descripción</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Prioridad" class="form-label">Prioridad</label>
                            <input asp-for="Prioridad" class="form-control" type="number" min="1" max="100" />
                            <small class="text-muted">Valor entre 1 y 100, donde 1 es la más alta prioridad</small>
                            <span asp-validation-for="Prioridad" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="Activo" class="form-check-input" />
                                <label asp-for="Activo" class="form-check-label">Regla Activa</label>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col">
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Volver
                                </a>
                            </div>
                            <div class="col text-end">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-save"></i> Guardar Regla
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}